<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.swings.dongphongclass2.StaticActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView android:text="Tổng số học sinh : "/>
                <TextView android:id="@+id/acti_static_txt_sumOfStudent"/>
            </TableRow>
            <TableRow>
                <TextView android:text="Tổng tiền : "/>
                <TextView android:id="@+id/acti_static_txt_sumOfAmount"/>
            </TableRow>
            <TableRow>
                <TextView android:text="Tổng tiền thu được : "/>
                <TextView android:id="@+id/acti_static_txt_sumOfAmountReceived"/>
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
